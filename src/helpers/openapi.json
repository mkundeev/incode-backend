{
  "openapi": "3.0.0",
  "servers": [
    {
      "description": "incode-backend",
      "url": "http://localhost:4000/"
    }
  ],
  "info": {
    "version": "1.0.0",
    "title": "incode-backend",
    "description": "Server app based on Node.js"
  },
  "paths": {
    "/auth/register": {
      "post": {
        "summary": "register new user",
        "tags": [
          "Auth"
        ],
        "operationId": "registerUser",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/userSignUpRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successfully registered user",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/authResponse"
                }
              }
            }
          },
          "409": {
            "description": "Email in use",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Email in use"
                    }
                  }
                }
              }
            }
          },
          "default": {
            "description": "error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/error"
                }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "login user",
        "tags": [
          "Auth"
        ],
        "operationId": "loginUser",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/userLogInRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully login user",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/authResponse"
                }
              }
            }
          },
          "404": {
            "description": "Wrong password/Wrong email",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Wrong password"
                    }
                  }
                }
              }
            }
          },
          "default": {
            "description": "error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/error"
                }
              }
            }
          }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "summary": "logout user",
        "tags": [
          "Auth"
        ],
        "operationId": "logoutUser",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "responses": {
          "204": {
            "description": "Successfully logout user",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "No Content"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Unauthorized"
                    }
                  }
                }
              }
            }
          },
          "default": {
            "description": "error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/error"
                }
              }
            }
          }
        }
      }
    },
    "/user": {
      "get": {
        "summary": "get all subordinates",
        "tags": [
          "User"
        ],
        "operationId": "getSubordinates",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "List of subordinates",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/subordinates"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Unauthorized"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Roll not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Roll not found"
                    }
                  }
                }
              }
            }
          },
          "default": {
            "description": "error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/error"
                }
              }
            }
          }
        }
      },
      "patch": {
        "summary": "change boss for subordinate",
        "tags": [
          "User"
        ],
        "operationId": "changeBoss",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/changeBossRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Boss for subordinate was changed",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Boss for subordinate was changed"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Unauthorized/You dont have rights to change user's boss"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Wrong subordinate or boss Id",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Wrong subordinate Id"
                    }
                  }
                }
              }
            }
          },
          "409": {
            "description": "Curent boss is already in charge of this suborninate",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Curent boss is already in charge of this suborninate"
                    }
                  }
                }
              }
            }
          },
          "default": {
            "description": "error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "userSignUpRequest": {
        "type": "object",
        "required": [
          "password",
          "email"
        ],
        "properties": {
          "email": {
            "type": "string",
            "example": "test@test.com"
          },
          "password": {
            "type": "string",
            "example": "1234qwer"
          }
        },
        "description": "user signup object"
      },
      "userLogInRequest": {
        "type": "object",
        "required": [
          "password",
          "email"
        ],
        "properties": {
          "email": {
            "type": "string",
            "example": "test@test.com"
          },
          "password": {
            "type": "string",
            "example": "1234qwer"
          }
        },
        "description": "user signup object"
      },
      "changeBossRequest": {
        "type": "object",
        "required": [
          "newBossId",
          "subordinateId"
        ],
        "properties": {
          "email": {
            "type": "string",
            "example": "newBossId"
          },
          "password": {
            "type": "string",
            "example": "subordinateId"
          }
        },
        "description": "change boss object"
      },
      "error": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      },
      "authResponse": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string"
          }
        }
      },
      "subordinate": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string"
          },
          "role": {
            "type": "string",
            "example": "boss"
          },
          "boss": {
            "type": "string",
            "example": "bossId"
          },
          "subordinates": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/subordinate"
            }
          }
        }
      },
      "subordinates": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/subordinate"
        }
      }
    },
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}